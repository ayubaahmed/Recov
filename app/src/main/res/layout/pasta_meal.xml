<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/pastaCardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="5dp"
        android:elevation="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_4"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameOfMeal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/pastaCardView"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/galada"
        android:text="Spaghetti puttanesca"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/timer"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/pastaCardView"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/img_18"
        android:scaleType="centerInside"
        />

    <ImageView
        android:id="@+id/difficulty"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/pastaCardView"
        android:layout_below="@+id/timer"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/img_15"
        android:scaleType="centerInside"
        />

    <ImageView
        android:id="@+id/serves"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/pastaCardView"
        android:layout_below="@+id/difficulty"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/img_16"
        android:scaleType="centerInside"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/timer"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/galada"
        android:text="- 45 minutes"
        android:textSize="17dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@id/serves"
        android:layout_below="@id/difficulty"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/galada"
        android:text="- Serves 5 people"
        android:textSize="17dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/stepOne"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/nameOfMeal"
        android:layout_marginLeft="28dp">

        <TextView
            android:id="@+id/stepOneText"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            android:fontFamily="@font/della_respira"
            android:text="Step One" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_below="@+id/stepOneText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/della_respira"
            android:text="Heat the oil in a non-stick pan over a medium-low heat. Add the onion along with a generous pinch of salt and fry for 10 mins, or until soft. Add the garlic and chilli, if using, and cook for a further minute."
            android:textSize="11sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/stepTwo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/stepOne"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/stepTwoText"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="Step Two"
            android:fontFamily="@font/della_respira"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            />

        <TextView
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_below="@+id/stepTwoText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/della_respira"
            android:text="Stir the tomatoes, anchovies, olives and capers into the onion, bring to a gentle simmer and cook, uncovered, for 15 mins. Season to taste."
            android:textSize="11sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/stepThree"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/stepTwo"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/stepThreeText"
            android:layout_width="72dp"
            android:layout_height="20dp"
            android:text="Step Three"
            android:fontFamily="@font/della_respira"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="6dp"
            />
        <TextView
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_below="@+id/stepThreeText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/della_respira"
            android:text="Meanwhile, bring a large pan of salted water to the boil. Cook the spaghetti following pack instructions, then drain and toss with the sauce and parsley."
            android:textSize="11sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="470dp"
        android:layout_toRightOf="@id/stepOne"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="235dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Ingridients"
            android:fontFamily="@font/della_respira"
            android:textAlignment="center"
            android:layout_marginLeft="17dp"/>

        <TextView
            android:layout_width="130dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/della_respira"
            android:text="3 tbsp olive oil

            1 onion, finely chopped


            2 large garlic cloves, crushed


            ½ tsp chilli flakes (optional)


            400g can chopped tomatoes


            5 anchovy fillets, finely chopped



            120g pitted black olives


            2 tbsp capers, drained

            300g dried spaghetti

            ½ small bunch of parsley, finely chopped"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />


    </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>